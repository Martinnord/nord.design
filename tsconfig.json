{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./lib",
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "noImplicitAny": true,
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
  }